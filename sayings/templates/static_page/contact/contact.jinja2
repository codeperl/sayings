{% extends "sayings:layouts/sayings/sayings.jinja2" %}
{% block title_tag %}
    static page contact
{% endblock %}

{% block content_inside_body %}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <div class="content">
                    <h3>Contact</h3>

                    <form action="{{ request.route_url('static_page_contact') }}" method="post">
                        <div class="form-group
                        {% if(form.email.errors) %}
                            has-error
                        {% endif %}
                        ">
                            {{ form.email.label }}: {{ form.email(class='form-control') }}
                            <div class="errors">
                                {% for error in form.email.errors %}
                                    <div class="help-block">{{ error }}</div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="form-group
                        {% if(form.body.errors) %}
                            has-error
                        {% endif %}
                        ">
                            {{ form.body.label }}: {{ form.body(class='form-control', rows=15, cols=30) }}
                            <div class="errors">
                                {% for error in form.body.errors %}
                                    <div class="help-block">{{ error }}</div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form.submit(class='btn btn-primary pull-right') }}
                        </div>
                        {{ form.csrf_token }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}