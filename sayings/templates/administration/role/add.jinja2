{% extends "sayings:layouts/sayings/sayings.jinja2" %}
{% block title_tag %}
    role add
{% endblock %}

{% block content_inside_body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Add Role</h2>
                <div class="col-md-3">
                </div>
                <div class="col-md-6">
                    <div class="content">
                        <h3>Add Role Form</h3>
                        <form action="{{ request.route_url('administration_product_add') }}" method="post">
                            <div class="form-group
                            {% if(form.name.errors) %}
                                has-error
                            {% endif %}">
                                {{ form.name.label }}: {{ form.name(class='form-control') }}
                                <div class="errors">
                                    {% for error in form.name.errors %}
                                        <div class="help-block">{{ error }}</div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="form-group
                            {% if(form.active.errors) %}
                                has-error
                            {% endif %}">
                               {{ form.active(class='form-control') }} {{ form.active.label }}
                                <div class="errors">
                                    {% for error in form.active.errors %}
                                        <div class="help-block">{{ error }}</div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form.submit(class='btn btn-primary pull-right') }}
                            </div>
                            {{ form.csrf_token }}
                        </form>
                    </div>
                </div>
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>
{% endblock %}